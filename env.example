"""
Environment configuration template for Atulya Tantra AGI
Copy this file to .env and update the values for your environment
"""

# Application Settings
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Database Configuration
DATABASE_TYPE=sqlite
# For SQLite (default)
SQLITE_PATH=data/tantra.db

# For PostgreSQL (uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost:5432/tantra

# Redis Configuration (optional, for caching and sessions)
REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# AI Provider Configuration
PRIMARY_AI_PROVIDER=ollama

# Ollama Configuration (local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b
OLLAMA_TIMEOUT=30

# OpenAI Configuration (uncomment and add your API key)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4-turbo
# OPENAI_MAX_TOKENS=4000
# OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (uncomment and add your API key)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# ANTHROPIC_MAX_TOKENS=4000
# ANTHROPIC_TEMPERATURE=0.7

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION=tantra_memory

# Feature Flags (comma-separated list of enabled features)
# Available features: streaming, markdown_rendering, voice_interface, vision, 
# file_attachments, personality_engine, proactive_assistance, emotional_intelligence,
# autonomous_operations, desktop_automation, task_scheduling, self_monitoring,
# code_agent, research_agent, creative_agent, data_agent, system_agent,
# knowledge_graph, vector_memory, multi_modal, web_search
FEATURES=streaming,markdown_rendering,voice_interface,vision,file_attachments,personality_engine,proactive_assistance,emotional_intelligence,task_scheduling,self_monitoring,code_agent,research_agent,creative_agent,data_agent,system_agent,knowledge_graph,vector_memory,multi_modal,web_search

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/tantra.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/plain,text/markdown,application/pdf,image/jpeg,image/png,image/gif,image/webp

# Voice Settings
VOICE_ENABLED=true
VOICE_WAKE_WORD=hey jarvis
VOICE_LANGUAGE=en-US
VOICE_ENERGY_THRESHOLD=300
VOICE_PAUSE_THRESHOLD=0.8

# Memory Settings
MAX_CONVERSATION_HISTORY=50
MEMORY_COMPRESSION_THRESHOLD=20
