# ðŸ”§ ATULYA ENVIRONMENT CONFIGURATION
# Copy this file to .env and customize for your environment

# =====================================
# CORE SYSTEM SETTINGS
# =====================================

# Path to custom YAML configuration file (relative to repo root)
ATULYA_CONFIG=config/atulya_config.yaml

# System name and identifier
ATULYA_NAME=Atulya
ATULYA_VERSION=1.0.0

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ATULYA_LOG_LEVEL=INFO

# Enable debug mode (verbose output, stack traces)
ATULYA_DEBUG=false

# =====================================
# MEMORY SETTINGS
# =====================================

# Memory consolidation interval (seconds, -1 = disabled)
MEMORY_CONSOLIDATION_INTERVAL=3600

# Short-term memory capacity (number of entries)
MEMORY_SHORT_TERM_CAPACITY=500

# Long-term memory capacity (number of entries)
MEMORY_LONG_TERM_CAPACITY=5000

# Memory similarity threshold for matching (0.0-1.0)
MEMORY_SIMILARITY_THRESHOLD=0.7

# =====================================
# EVOLUTION SETTINGS
# =====================================

# Enable evolutionary learning
EVOLUTION_ENABLED=true

# Initial learning rate for evolution
EVOLUTION_LEARNING_RATE=0.01

# Exploration factor for genetic diversity
EVOLUTION_EXPLORATION_FACTOR=0.15

# Mutation rate for parameter changes
EVOLUTION_MUTATION_RATE=0.05

# Population size for evolutionary algorithms
EVOLUTION_POPULATION_SIZE=10

# Fitness threshold for model improvement
EVOLUTION_FITNESS_THRESHOLD=0.85

# =====================================
# SKILL MANAGER SETTINGS
# =====================================

# Enable skill learning
SKILLS_ENABLED=true

# Initial proficiency level for new skills (0.0-1.0)
SKILLS_INITIAL_PROFICIENCY=0.5

# Proficiency growth rate per successful use
SKILLS_GROWTH_RATE=0.05

# Maximum proficiency level
SKILLS_MAX_PROFICIENCY=1.0

# =====================================
# TASK SETTINGS
# =====================================

# Task timeout in seconds (-1 = no timeout)
TASK_TIMEOUT=300

# Maximum retries for failed tasks
TASK_MAX_RETRIES=3

# Task confidence threshold (0.0-1.0)
TASK_CONFIDENCE_THRESHOLD=0.6

# Enable task caching
TASK_CACHING=true

# =====================================
# DATABASE SETTINGS (Docker)
# =====================================

# PostgreSQL connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=atulya
DB_USER=atulya_user
DB_PASSWORD=atulya_secure_password
DB_POOL_SIZE=5

# Redis connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# =====================================
# API & INTEGRATION SETTINGS
# =====================================

# Enable external API integrations
INTEGRATIONS_ENABLED=true

# API timeout in seconds
API_TIMEOUT=30

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# =====================================
# AUTOMATION SETTINGS
# =====================================

# Enable automation rule engine
AUTOMATION_ENABLED=true

# Max concurrent automation tasks
AUTOMATION_MAX_CONCURRENT=5

# Automation rule evaluation interval (seconds)
AUTOMATION_EVAL_INTERVAL=60

# =====================================
# NLP SETTINGS
# =====================================

# NLP model type: "spacy" or "transformers"
NLP_MODEL_TYPE=spacy

# NLP similarity threshold (0.0-1.0)
NLP_SIMILARITY_THRESHOLD=0.65

# Enable named entity recognition
NLP_ENABLE_NER=true

# Enable sentiment analysis
NLP_ENABLE_SENTIMENT=true

# =====================================
# MONITORING & OBSERVABILITY
# =====================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Enable performance profiling
PROFILING_ENABLED=false

# Performance profiling interval (seconds)
PROFILING_INTERVAL=300

# =====================================
# NETWORK SETTINGS
# =====================================

# Server host for Atulya API
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# CORS enabled origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =====================================
# EXTERNAL SERVICES
# =====================================

# Slack integration webhook
SLACK_WEBHOOK_URL=

# Email service
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# OpenAI API key (for advanced NLP)
OPENAI_API_KEY=

# Google Cloud credentials path
GOOGLE_CREDENTIALS_PATH=

# AWS credentials (use IAM roles in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =====================================
# SECURITY SETTINGS
# =====================================

# Enable API authentication
AUTH_ENABLED=true

# JWT secret key
JWT_SECRET_KEY=your_super_secret_key_change_this_in_production

# JWT token expiration (hours)
JWT_EXPIRATION_HOURS=24

# Enable HTTPS/TLS
TLS_ENABLED=false

# TLS certificate path
TLS_CERT_PATH=

# TLS key path
TLS_KEY_PATH=

# Password hashing salt rounds
PASSWORD_SALT_ROUNDS=10

# =====================================
# BACKUP & PERSISTENCE
# =====================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup interval (seconds)
BACKUP_INTERVAL=86400

# Backup directory path
BACKUP_DIR=./backups

# Retain backups for N days
BACKUP_RETENTION_DAYS=30

# =====================================
# DEVELOPMENT SETTINGS
# =====================================

# Development mode (disables some security features)
DEV_MODE=false

# Enable hot reloading
HOT_RELOAD=false

# Test mode (uses in-memory database)
TEST_MODE=false

